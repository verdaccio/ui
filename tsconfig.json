{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "verdaccio-ui/components/*": ["src/components/*"],
      "verdaccio-ui/design-tokens/*": ["src/design-tokens/*"],
      "verdaccio-ui/utils/*": ["src/utils/*"],
      "verdaccio-ui/providers/*": ["src/providers/*"]
    },
  },
  "include": [
    "src",
    "types/*.d.ts",
    "scripts/lib",
    "node_modules/config",
    "test/unit",
  ],
  "exclude": [
    "node_modules"
  ],
}
