{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@verdaccio/components/*": ["src/components/*"],
      "@verdaccio/design-tokens/*": ["src/design-tokens/*"],
      "@verdaccio/utils/*": ["src/utils/*"]
    },
  },
  "include": [
    "src",
    "types/*.d.ts",
    "scripts/lib",
    "node_modules/config",
  ],
  "exclude": [
    "node_modules"
  ],
}